{
    "version": 2,
    "builds": [
      {
        "src": "backend/main.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.13" }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
       {
        "src": "/api/(.*)",
        "dest": "backend/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }